PORT=4000

# Choose: cloudflare | openai | ollama | fallback
LLM_PROVIDER=cloudflare

# Cloudflare Workers AI (recommended if OpenAI credits are out)
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_MODEL=@cf/meta/llama-3.1-70b-instruct

# OpenAI (optional)
OPENAI_API_KEY=your_key_here
OPENAI_MODEL=gpt-4.1-mini

# Ollama (optional local)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.2:3b

# MongoDB (for /post-request matchmaking)
MONGODB_URI=mongodb://your_mongo_uri_here/intent_router
MONGODB_DB_NAME=intent_router

# Matchmaking tuning
MATCH_THRESHOLD=30
FRESHNESS_WINDOW_HOURS=24
